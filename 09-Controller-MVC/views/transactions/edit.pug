h1 Edit Transaction

form(action="/transactions/edit", method='POST')
  table
    tr
      td 
        label Transaction ID:
      td 
        select(name="id")
          option= transaction.id
    tr
      td 
        label User Name:
      td 
        select(name="userName")
          each user in users
            option= user.name
    tr
      td
        label Book Title:
      td  
        select(name="bookTitle")
          each book in books
            option= book.title
    tr  
      td
      td
        button Edit
