extends ../../layouts/common

block content

  h1 Login  

  if errors
    each error in errors
      div(class='alert alert-danger')= error

  form(action="/auth/login", method='POST')
    div(class='form-group')
      label Email
      input(type="text", name='email', class='form-control', value= values ? values.email : '')
      label Password
      input(type="text", name='password', class='form-control', value= values ? values.password : '')
    button(class='btn btn-primary') Login
